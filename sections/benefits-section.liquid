{%- style -%}
  #shopify-section-{{ section.id }} {
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'buttons' -%}
      --color-button-background: {{ block.settings.color_button_backgroun }};
      --color-color-button-label: {{ block.settings.color_button_label }};
      --color-color-button-border: {{ block.settings.color_button_border }};
      --hover-color-button-background: {{ block.settings.hover_color_button_backgroun }};
      --hover-color-button-border: {{ block.settings.hover_color_button_border }};
      --hover-color-button-label: {{ block.settings.hover_color_button_label }};
      {%- endcase -%}
    {%- endfor -%}
  }
{%- endstyle -%}
{{ 'custom-style-buttons.css' | asset_url | stylesheet_tag }}
<section class="benefits">
  <div class="page-width">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          {%- if block.settings.title != blank -%}
            <h2 class="title" style=" color: {{ block.settings.color_title_label }};">
              {{ block.settings.title -}}
            </h2>
          {%- endif -%}
      {% endcase %}
    {% endfor %}
    <div class="benefits__wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'benefits-item' %}
            <div class="benefits__item">
              {%- if block.settings.image != blank -%}
                <div class="benefits__image">
                  <img
                    src="{{ block.settings.image | img_url:  'original'}}"
                    alt=""
                  >
                </div>
              {%- endif -%}
              <div class="benefits__content">
                {%- if block.settings.heading != blank -%}
                  <h3 style=" color: {{ block.settings.color_heading_label }};">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.content != blank -%}
                  <div style=" color: {{ block.settings.color_content_label }};">{{ block.settings.content }}</div>
                {%- endif -%}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    {% for block in section.blocks %}
      {% case block.type %}
        {%- when 'buttons' -%}
          {%- if block.settings.button_label != blank -%}
            <div
              class="benefits__btn"
            >
              <a
                {% if block.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="btn"
              >
                {{- block.settings.button_label | escape -}}
              </a>
            </div>
          {%- endif -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</section>

