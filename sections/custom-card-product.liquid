{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}



{% comment %} {%- liquid
  assign products_to_display = section.settings.collection.all_products_count
-%} {% endcomment %}

<div class="color isolate gradient collection__backgroun-fon my-styles-for-collection">
  <div class="collection page-width">
   
      <ul
        class="products grid product-grid contains-card contains-card--product"
        role="list"  
      >
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <li
            class="product"
          >
            {% render 'card-product',
              card_product: product,
              show_quick_add: section.settings.enable_quick_add,
              section_id: section.id
            %}
          </li>
        {%- else -%}
          {%- for i in (1..4) -%}
            <li
              class="product"
            >
              {% render 'card-product' %}
            </li>

            <li class="product">
              <div class="card-wrapper product-card-wrapper underline-links-hover">
                <div class="card card--card card--media color-background-1 gradient">
                  {% comment %} <div class="card__inner ratio">
                    <div class="card__content">
                      <div class="card__information">
                        <h3 class="card__heading">
                          <a href="#" class="full-unstyled-link">Closer</a>
                        </h3>
                      </div>
                      <div class="card__badge bottom right"></div>
                    </div>
                  </div> {% endcomment %}
                  <div class="card__content">
