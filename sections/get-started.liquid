<section class="get-started">
  <div class="page-width">
    <div class="get-started__wrapper">
      <div class="get-started__left">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'heading' %}
              {%- if block.settings.heading != blank -%}
                <h2 class="title" style=" color: {{ block.settings.color_heading_label }};">
                  {{ block.settings.heading -}}
                </h2>
              {%- endif -%}
            {% when 'description' %}
              {%- if block.settings.description != blank -%}
                <ol class="description" style=" color: {{ block.settings.color_title_label }};">
                  {{ block.settings.description -}}
                </ol>
              {%- endif -%}
          {% endcase %}
        {% endfor %}
      </div>
      <div class="get-started__right">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'content' %}
              {%- if block.settings.content != blank -%}
                <h3 class="get-started__sub-title" style=" color: {{ block.settings.color_content_label }};">
                  {{ block.settings.content -}}
                </h3>
              {%- endif -%}
            {% when 'section' %}
              {%- if block.settings.label != blank -%}
                <div class="get-started__item" style=" background: {{ block.settings.background_block }};">
                  <h4
                    class="get-started__item-title"
                    style=" color: {{ block.settings.color_label }}; background: {{ block.settings.background-label }};"
                  >
                    {{ block.settings.label }}
                  </h4>
                  <div style=" color: {{ block.settings.color_content_label }};">
                    {{ block.settings.content }}
                  </div>
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "get-started",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "color_heading_label",
          "label": "Color Heading Label",
          "default": "#383633"
        }
      ]
    },

    {
      "type": "description",
