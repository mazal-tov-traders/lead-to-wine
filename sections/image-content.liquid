<section class="image-content image-content_bg-white image-content_vertical-center-align">
  <div class="inner">
    <div class="image-content__wrapper">
      <div class="image-content__image">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'media' %}
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | img_url:  'original'}}"
                  alt="page_image"
                  class="image"
                >
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
      <div class="image-content__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              {%- if block.settings.title != blank -%}
                <h2 class="title" style=" color: {{ block.settings.color_title_label }};">
                  {{ block.settings.title -}}
                  <span class="italic" style=" color:{{ block.settings.color_title_label_it }};">
                    {{- block.settings.title_it -}}
                  </span>
                </h2>
              {%- endif -%}
            {% when 'description' %}
              {%- if block.settings.description != blank -%}
                <div class="image-content__description" style=" color:{{ block.settings.color_description_label }};">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
            {% when 'link' %}
              {%- if block.settings.button_label != blank -%}
                <div class="image-content__wrapper-link">
                  {% render 'icon-pdf' %}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}

                    class="image-content__wrapper-link_link"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                </div>
              {%- endif -%}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "image-content",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "title",
      "name": "title",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "color_title_label",
          "label": "Color Title Label",
          "default": "#1D2228"
        },
        {
          "type": "inline_richtext",
          "id": "title_it",
          "label": "Title Italic"
        },
        {
          "type": "color",
          "id": "color_title_label_it",
          "label": "Color Title italic Label",
          "default": "#1D2228"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "color_description_label",
          "label": "Color Description Label",
          "default": "#918677"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "color_heading_label",
          "label": "Color Heading Label",
          "default": "#1D2228"
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "color_content_label",
          "label": "Color Content Label",
          "default": "#1D2228"
        }
      ]
    },
    {
      "type": "link",
      "name": "Link",
      "limit": 5,
      "settings": [
        {
          "type": "text",
