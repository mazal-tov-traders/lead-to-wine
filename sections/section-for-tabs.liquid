{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

<section class="section-fot-tabs">
  <div class="page-width">
    <button type="button"  class="tab-trigger">{{section.settings.trigger }}</button>


    <div class="heading-wrapper">
      {%- if section.settings.title != blank -%}
        <h2 class="title" style=" color: {{ section.settings.color_title }};">
          {{ section.settings.title -}}
        </h2>
      {%- endif -%}
      {%- if section.settings.sub_title != blank -%}
        <div class="sub-title" style=" color: {{ section.settings.color_sub_title }};">
          {{ section.settings.sub_title -}}
        </div>
      {%- endif -%}
    </div>
    <div class="section-fot-tabs__wrapper">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'media' %}
            <div class="image-and-title">
              {%- if block.settings.image != blank -%}
                <div class="section-fot-tabs__image">
                  <img
                    src="{{ block.settings.image | img_url:  'original'}}"
                    alt=""
                  >
                </div>
              {% endif %}
              <div class="section-fot-tabs__titel-wrapper">
                {%- if block.settings.title != blank -%}
                  <div class="title" style=" color: {{ section.settings.color_title }};">
                    {{ block.settings.title }}
                  </div>
                {% endif %}
                {%- if block.settings.content != blank -%}
                  <div class="content" style=" color: {{ section.settings.color_content }};">
                    {{ block.settings.content }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% when 'collapsible_row' %}
            <div
              class="accordion content-container"
              {{ block.shopify_attributes }}
            >
              <details
                class="details-custom"
                id="Details-{{ block.id }}-{{ section.id }}"
                {% if section.settings.open_first_collapsible_row and forloop.first %}
                  open
                {% endif %}
              >
                <summary id="Summary-{{ block.id }}-{{ section.id }}" class="summary-custom">
                  {% render 'icon-accordion', icon: block.settings.icon %}
                  <h3 class="accordion__title inline-richtext h4">
                    {{ block.settings.heading | default: block.settings.page.title }}
                  </h3>
                  {% render 'icon-plus-custom' %}
                  {% render 'icon-minus-custom' %}
                </summary>
                <div
                  class="accordion__content rte"
                  id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                  role="region"
                  aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                >
                  {{ block.settings.row_content }}
              
                </div>
              </details>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Section For Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "trigger",
        "label": "Tab Name"
      }
  ],
  "blocks": [
    {
      "type": "media",
      "name": "Image and Title",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "color_title",
          "label": "Color Title",
          "default": "#383633"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "color_content",
          "label": "Color Content",
          "default": "#383633"
        }
      ]
    },
    {
      "type": "collapsible_row",
      "name": "t:sections.collapsible_content.blocks.collapsible_row.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Collapsible row",
          "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.label",
          "info": "t:sections.collapsible_content.blocks.collapsible_row.settings.heading.info"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "t:sections.collapsible_content.blocks.collapsible_row.settings.row_content.label"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon For Link"
        },
        {
          "type": "text",
          "id": "label_link",
          "label": "label Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section For Tabs"
    }
  ]
}
{% endschema %}
