<section class="section-tabs-heading">
  <div class="page-width">
    <div class="heading-wrapper">
      {%- if section.settings.title != blank -%}
        <h2 class="title" style=" color: {{ section.settings.color_title }}; font-size: {{section.settings.font_size}}px;">
          {{ section.settings.title -}}
        </h2>
      {%- endif -%}
      {%- if section.settings.sub_title != blank -%}
        <div class="sub-title" style=" color: {{ section.settings.color_sub_title }}; font-size: {{section.settings.font_size1}}px;">
          {{ section.settings.sub_title -}}
        </div>
      {%- endif -%}
    </div>
    <div class="section-tabs__wrapper">
      <div class="tab-trigger"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Section Tabs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "font_size",
      "label": "Font Size Enter Number"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Title",
      "default": "#383633"
    },
    {
      "type": "inline_richtext",
      "id": "sub_title",
      "label": "Sub Title"
    },
    {
      "type": "text",
      "id": "font_size1",
      "label": "Font Size Enter Number"
    },
    {
      "type": "color",
      "id": "color_sub_title",
      "label": "Color Sub Title",
      "default": "#383633"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Section Tabs"
    }
  ]
}
{% endschema %}
