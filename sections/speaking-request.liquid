<section class="speaking-request{{ section.settings.b }} speaking-request">
  <div class="page-width">
    <div class="speaking-request__wrapper{{- section.settings.position_image -}}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'media' %}
            {%- if block.settings.image != blank -%}
              <div class="speaking-request__image">
                <img
                  src="{{ block.settings.image | img_url:  'original'}}"
                  alt=""
                >
              </div>
            {% endif %}
        {% endcase %}
      {% endfor %}

      <div class="speaking-request__content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              {%- if block.settings.title != blank -%}
                <h2 class="title" style=" color: {{ block.settings.color_title_label }};">
                  {{ block.settings.title -}}
                </h2>
              {%- endif -%}
            {% when 'description' %}
              {%- if block.settings.description != blank -%}
                <div class="description" style=" color:{{ block.settings.color_description_label }};">
                  {{ block.settings.description }}
                </div>
              {%- endif -%}
            {% when 'link' %}
              {%- if block.settings.label_link != blank -%}
                <a
                  {% if block.settings.link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.link }}"
                  {% endif %}

                  class="link"
                >
                  {{- block.settings.label_link | escape -}}
                  {% render 'icon-arrow-right' %}
                </a>
              {%- endif -%}
            {% when 'form' %}
              {%- if block.settings.form != blank -%}
                <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/embed/v2.js"></script>
                <script>
                  hbspt.forms.create({
                    region: 'na1',
                    portalId: '23904200',
                    formId: '13e7d1be-3d45-4529-8332-1fb6fb14e1cc',
                  });
                </script>
              {%- endif -%}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "speaking-request",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "background",
      "options": [
        {
          "value": "_bg-white",
          "label": "White"
        },
        {
          "value": "base",
          "label": "Base"
        }
      ],
      "default": "_bg-white",
      "label": "background"
    },
    {
      "type": "select",
      "id": "position_image",
      "options": [
        {
          "value": " ",
          "label": "left"
        },
        {
          "value": "_reverse",
          "label": "right"
        }
      ],
      "default": " ",
      "label": "Position Image"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "title",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "color_title_label",
          "label": "Color Title Label",
          "default": "#383633"
        }
      ]
    },
    {
      "type": "form",
      "name": "form",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "form",
          "label": "Form"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "color",
          "id": "color_description_label",
          "label": "Color Description Label",
          "default": "#383633"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "color",
          "id": "color_heading_label",
          "label": "Color Heading Label",
          "default": "#383633"
        }
      ]
    },
    {
      "type": "content",
      "name": "Content",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "color",
          "id": "color_content_label",
          "label": "Color Content Label",
          "default": "#383633"
        }
      ]
    },
    {
      "type": "link",
      "name": "Link",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "File label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "File Link"
        }
      ]
    },
    {
      "type": "media",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Speaking Request"
    }
  ]
}
{% endschema %}
