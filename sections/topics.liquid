{%- style -%}
  #shopify-section-{{ section.id }} {
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'card' -%}
          #services-item-{{ forloop.index }}{
      --color-button-background: {{ block.settings.color_button_backgroun }};
      --color-color-button-label: {{ block.settings.color_button_label }};
      --color-color-button-border: {{ block.settings.color_button_border }};
      --hover-color-button-background: {{ block.settings.hover_color_button_backgroun }};
      --hover-color-button-border: {{ block.settings.hover_color_button_border }};
      --hover-color-button-label: {{ block.settings.hover_color_button_label }};
        }
      {%- endcase -%}
    {%- endfor -%}
  }
{%- endstyle -%}

<div class="page-width">
    <h2 class="title" style="color:{{ section.settings.color_title_label }}; font-size:{{ section.settings.font_size }}px;">{{ section.settings.section-title }}</h2>
    <div class="topics__wrapper">
        {% for block in section.blocks %}
            <div class="topics__item">
                <div class="topics__image">
                    <img src="{{ block.settings.icon |  image_url }}" alt="image">
                    <span style="background-color: {{ block.settings.color_category_back }}; color:{{ block.settings.color_category_label }}; font-size:{{ block.settings.font_size }}px;" class="topics__category">{{ block.settings.categoty }}</span>
                </div>
                <div class="topics__content">
                    <h3 style="color:{{ block.settings.color_title_label }}; font-size:{{ block.settings.font_size-2 }}px;" class="topics__sub-title">{{ block.settings.title }}</h3>
                    <div class="topics__description">
                        <p style="color:{{ block.settings.color_text_label }}; font-size:{{ block.settings.font_size-3 }}px;">{{ block.settings.text }}</p>
                    </div>
                    <div class="topics__btn-wrap" id="services-item-{{ forloop.index }}">
                        <a class="topics__btn" href="{{ block.settings.button_link }}">{{ block.settings.button-label }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

