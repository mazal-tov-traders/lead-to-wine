@import "../../variables-and-mixins.pcss";

.menu-footer-links {
	&__items {
		list-style-type: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-wrap: wrap;
	}

	&__item {
		padding-right: 8px;
		padding-left: 5px;
		position: relative;

		&::before {
			position: absolute;
			content: "|";
			right: 0;
			top: 2px;
		}

		&:first-child {
			padding-left: 0;
		}

		&:last-child {
			&::before {
				display: none;
			}
		}
	}

	&__link {
		line-height: 26px;
	}
}
